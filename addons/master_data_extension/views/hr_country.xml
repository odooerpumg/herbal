<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Country -->
		<record model="ir.ui.view" id="hr_country_tree">
			<field name="name">Country</field>
			<field name="model">hr.country</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name" />
					<field name="country_code" />
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="hr_country_form">
			<field name="name">Country</field>
			<field name="model">hr.country</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<group>
								<field name="name" />
							</group>
							<group>
								<field name="country_code" />
							</group>
						</group>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
						<field name="activity_ids" widget="mail_activity"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>
		<record model="ir.actions.act_window" id="hr_country_action_window">
			<field name="name">Country</field>
			<field name="res_model">hr.country</field>
			<field name="view_mode">tree,form</field>
		</record>
	<!-- End -->
		<menuitem name="Country" id="hr_country_menu" parent="master_data_extension.master_data_menu" action="hr_country_action_window" sequence="18"/>
</odoo>
