<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="group_stock_read_access" model="res.groups">
            <field name="name">User: Documents Read</field>
            <field name="category_id" ref="base.module_category_operations_inventory"/>
            <field name="comment">the user will have access to readonly data in the sales application.</field>
        </record>
        <record id="stock.group_stock_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="base.module_category_operations_inventory"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')),(4, ref('group_stock_read_access'))]"/>
        </record>

        <record id="bu_user_access_for_stock_quant" model="ir.rule">
            <field name="name">stock.quant.bu.user</field>
            <field name="model_id" ref="stock.model_stock_quant"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">['|',('location_id.business_unit_id','=', False),('location_id.business_unit_id','=', user.bu_id.id)]</field>
        </record>
        <record id="bu_admin_access_for_stock_quant" model="ir.rule">
            <field name="name">stock.quant.bu.admin</field>
            <field name="model_id" ref="stock.model_stock_quant"/>
            <field name="groups" eval="[(4, ref('base.group_erp_manager'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">[(1,'=', 1)]</field>
        </record>
    </data>
</odoo>